{
  "name": "selenium-automation",
  "version": "1.0.0",
  "description": "Selenium Automation with React UI",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "preinstall": "node -v",
    "prestart": "node -r ./config.js validateEnv",
    "start": "NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development concurrently -n 'UI,API' -c 'bgBlue.bold,bgGreen.bold' \"npm run ui:dev\" \"nodemon -r ./config.js server.js\"",
    "build": "npm run build:ui && npm run build:server",
    "build:ui": "cd simple_ui && npm ci && npm run build",
    "build:server": "npm ci --omit=dev",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "check": "npm run lint && npm run type-check && npm run test",
    "prepare": "husky install",
    "vercel-build": "npm run build",
    "vercel-dev": "npm run dev",
    "vercel-preview": "npm run build && npm run start"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "csv-parse": "^5.5.0",
    "csv-stringify": "^6.2.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.8.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
