{
  "name": "selenium-automation",
  "version": "1.0.0",
  "description": "Selenium Automation with React UI",
  "type": "module",
  "main": "server.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:ui",
    "build:ui": "cd simple_ui && npm ci && npm run build",
    "vercel-build": "npm install --omit=dev && npm run build:ui",
    "deploy": "vercel --prod",
    "validate:vercel": "node -e \"JSON.parse(require('fs').readFileSync('vercel.json','utf8'))\" && echo ' vercel.json valid JSON'"
  },
  "dependencies": {
    "@vercel/node": "^4.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-validator": "^7.3.0",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.0",
    "nodemon": "^3.0.2",
    "vercel": "^32.2.5"
  },
  "packageManager": "npm@10.2.3"
}
