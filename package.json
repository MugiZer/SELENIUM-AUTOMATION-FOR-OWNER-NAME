{
  "name": "selenium-automation",
  "version": "1.0.0",
  "description": "Selenium Automation with React UI",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "prestart": "node -r ./config.js validateEnv",
    "start": "node server.js",
    "setup": "tsx scripts/setup.ts",
    "dev": "concurrently \"npm run ui:dev\" \"nodemon -r ./config.js server.js\"",
    "ui:install": "cd ui && npm install",
    "ui:build": "cd ui && npm run build",
    "ui:dev": "cd ui && npm run dev",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "prepare": "node -e \"const { existsSync } = require('fs'); if (existsSync('node_modules/.bin/husky')) require('child_process').execSync('npx husky install', { stdio: 'inherit' })\""
  },
  "dependencies": {
    "@types/express-session": "^1.18.2",
    "@types/node": "^20.8.0",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.9",
    "@types/node": "^20.8.0",
    "@types/passport-google-oauth20": "^2.0.9",
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
