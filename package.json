{
  "name": "selenium-automation",
  "version": "1.0.0",
  "description": "Selenium Automation with React UI",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "prestart": "node -r ./config.js validateEnv",
    "start": "node server.js",
    "setup": "node setup.js",
    "dev": "concurrently -n 'UI,API' -c 'bgBlue.bold,bgGreen.bold' \"npm run ui:dev\" \"nodemon -r ./config.js server.js\"",
    "ui:install": "cd simple_ui && npm install",
    "ui:build": "cd simple_ui && npm run build",
    "ui:dev": "cd simple_ui && npm run dev",
    "build": "npm run ui:build",
    "build:no-validate": "cd simple_ui && npm run build",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "vercel-build": "npm install && cd simple_ui && npm install && npm run build",
    "prepare": "[ -f node_modules/.bin/husky ] && npx husky install || exit 0",
    "vercel-dev": "npm run dev",
    "vercel-preview": "npm run build && npm run start"
  },
  "dependencies": {
    "@types/express-session": "^1.18.2",
    "@types/node": "^20.8.0",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "helmet": "^7.1.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.9",
    "@types/node": "^20.8.0",
    "@types/passport-google-oauth20": "^2.0.9",
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
