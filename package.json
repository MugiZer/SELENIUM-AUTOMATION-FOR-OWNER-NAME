    "express": "^4.18.2",
    "express-validator": "^7.3.0",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.0",
    "nodemon": "^3.0.2"
  }
}
