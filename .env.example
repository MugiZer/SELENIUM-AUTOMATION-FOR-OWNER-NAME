# ========================
# Application Configuration
# ========================

# Server Configuration
# -------------------
NODE_ENV=development
PORT=3000
SESSION_SECRET=your-session-secret-here

# Frontend Configuration
# ---------------------
VITE_API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:8080

# CORS Configuration
# -----------------
CORS_ORIGIN=http://localhost:8080,http://localhost:5173

# Scraper Configuration
# --------------------
MONTREAL_EMAIL=your-email@example.com
MONTREAL_PASSWORD=your-password

# Processing Configuration
# -----------------------
# Delay between requests in seconds
DELAY_MIN=1.5
DELAY_MAX=3.0

# File Storage
# -----------
CACHE_PATH=./cache
OUTPUT_DIR=./output
LOG_DIR=./logs

# Logging
# -------
LOG_LEVEL=info
LOG_FILE=${LOG_DIR}/app.log

# CSV Processing
# -------------
# Chunk size for processing large CSV files
CSV_CHUNK_SIZE=50
# Backup directory for input files
BACKUP_DIR=./backups

# Output Format
# -------------
# Date format for output files
DATE_FORMAT=%Y%m%d_%H%M%S
# Output file name pattern
OUTPUT_FILE_PATTERN=property_data_%Y%m%d_%H%M%S.csv
