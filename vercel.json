{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "ui/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.js" },
    { "src": "/auth/(.*)", "dest": "/server.js" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/ui/dist/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "buildCommand": "cd ui && npm install && npm run build",
  "outputDirectory": "ui/dist"
}
